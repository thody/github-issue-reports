doctype html
html
    head
        title #{repo} Issue Report
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
    body
        div.container
            h1 #{repo} Issue Report
            p Generated: #{runDate.format('MMMM Do, YYYY @ h:mm:ss a')}
            h2 Open Issues&nbsp;
                small (#{openIssues.length})
            table.table.table-condensed.table-striped
                thead
                    tr
                        th Number
                        th Title
                        th Tags
                        th Created
                tbody
                    each issue in openIssues
                        tr
                            td= issue.number
                            td: a(href=issue.url)= issue.title
                            td= issue.labels.join(', ')
                            td= issue.createdAt.format('MMMM Do, YYYY')

            h2 Closed Issues&nbsp;
                small (#{closedIssues.length})
            table.table.table-condensed.table-striped
                thead
                    tr
                        th Number
                        th Title
                        th Tags
                        th Closed
                tbody
                each issue in closedIssues
                    tr
                        td= issue.number
                        td: a(href=issue.url)= issue.title
                        td= issue.labels.join(', ')
                        td= issue.closedAt.format('MMMM Do, YYYY')

            footer
                p.text-right
                    small: a(href='https://www.npmjs.com/package/github-issue-reports') Generated by github-issue-reports